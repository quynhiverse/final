<% review = Review.find_by("id" => params["id"]) %>

<h1>Edit Review #<%= review["id"] %></h1>

<form action= "/reviews/:id" method="patch">

  <p>
    <label>Dress ID</label>
    <input type="integer" name="dress_id" value= <%= review.dress_id %>>
  </p>

  <p>
    <label>Star Rating? (On a scale of 1-5)</label>
    <input type="integer" name="review_rating" value= <%= review.review_rating %>>
  </p>

  <p>
    <label>Review</label>
    <input type="text" name="review" value= <%= review.review %>>
  </p>

  <input type="submit"> or <a href="/reviews">Cancel</a>

</form>
