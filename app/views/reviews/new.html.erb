<h1>Add a Review</h1>

<form action="/reviews/:id" method="post">
<% review = Review.find_by("dress_id" => params["id"]) %>

  <p>
    <label>Dress ID</label>
    <input type="integer" name="dress_id" value= <%=params["id"]%>>
  </p>

  <p>
    <label>Review ID</label>
    <input type="integer" name="id" value= <%= review.id %>>
  </p>

  <p>
    <label>Star Rating? (On a scale of 1-5)</label>
    <input type="integer" name="review_rating">
  </p>

  <p>
    <label>Review</label>
    <input type="text" name="review">
  </p>

  <input type="submit"> or <a href="/reviews">Cancel</a>

</form>
